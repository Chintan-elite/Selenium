package oops;

class Pen
{
	int price;
	String color;
	String company;
	
	void toWrite()
	{
		System.out.println("method calling...");
		System.out.println(price+" "+color+" "+company);
	}
	
}

public class O001_First {
	public static void main(String[] args) {
		
		Pen p = new Pen();
		p.price=10;
		p.color="red";
		p.company="cello";
		p.toWrite();
		
		
		Pen p1 = new Pen();
		p1.price=20;
		p1.color="blue";
		p1.company="ss";
		p1.toWrite();
		
		
		
	}
}
